#!/bin/bash

main() {
  local main_cmd="nex $1 $2 $3"
  local script_1=$1'_'$2.sh
  local script_2=$1.sh
  local cmd_1=_nx_$1'_'$2
  local cmd_2=_nx_$1
  if [ -z "$1" ]; then
    hello_cli
  elif is_script "$script_1"; then
    run_script $script_1 "${@:3}"
  elif is_script "$script_1"; then
    run_script $script_2 "${@:2}"
  elif is_cmd $cmd_1; then
    $cmd_1 "${@:3}"
  elif is_cmd $cmd_2; then
    $cmd_2 "${@:2}"
  else
    echo " not_found: $main_cmd"
  fi
}

is_cmd() {
  if command -v $1 &> /dev/null; then
    return 0
  else
    return 1
  fi
}

is_script() {
  if [[ -f "$(root_path)/src/$1" ]]; then
    return 0
  else
    return 1
  fi
}

root_path() {
  echo $HOME/dotfiles/cli.nexplugin
}

run_script() {
  bash $(root_path)/src/$1 ${@:2}
}

hello_cli() {
  echo " Hello Nex CLI !"
  echo " Usage: nex <1> <2> <3>"
  echo
}

main "$@"
