#!/bin/bash

main() {
  load_config
  local main_cmd="nex $1 $2 $3"
  local script_1=$1'_'$2.sh
  local script_2=$1.sh
  local cmd_1=_nx_$1'_'$2
  local cmd_2=_nx_$1
  if [ "$1" == "_config" ]; then
    nex_config
    return 0
  fi

  if [ -z "$1" ]; then
    hello_cli
    return 1
  fi

  if is_script "$script_1"; then
    run_script $script_1 "${@:3}"
  elif is_script "$script_2"; then
    run_script $script_2 "${@:2}"
  elif is_cmd $cmd_1; then
    $cmd_1 "${@:3}"
  elif is_cmd $cmd_2; then
    $cmd_2 "${@:2}"
  else
    echo " not_found: $main_cmd"
  fi
}

is_cmd() {
  if command -v $1 &> /dev/null; then
    return 0
  else
    return 1
  fi
}

is_script() {
  if [[ -f "$(root_dir)/src/$1" ]]; then
    return 0
  else
    return 1
  fi
}

root_dir() {
  local nex_root_path=$HOME/dotfiles
  echo $nex_root_path/cli.nex
}

run_script() {
  bash $(root_dir)/src/$1 ${@:2}
}

hello_cli() {
  echo " Hello Nex CLI !"
  echo " Usage: nex <1> <2> <3>"
  echo
}

load_config() {
  eval $(nex_config)
}

nex_config() {
  cat <<EOF
export nex_root_path=$HOME/dotfiles
export nex_cli_path=$nex_root_path/cli.nex
export nex_plugin_base=$HOME/dotfiles/plugins
export nex_mod_base=$HOME/dotfiles/mods
EOF
}

main "$@"
