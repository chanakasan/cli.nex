#!/bin/bash

main() {
  local main_cmd="nex $1 $2 $3"
  local fn_1=fn_$1
  local script_1=$1'_'$2.sh
  local script_2=$1.sh
  local cmd_1=_nx_$1'_'$2
  local cmd_2=_nx_$1
  if [ "$(type -t $fn_1)" == function ]; then
    $fn_1 ${@:2}
    return 0
  fi

  if [ -z "$1" ]; then
    fn_hello
    return 1
  fi

  if is_script "$script_1"; then
    run_script $script_1 "${@:3}"
  elif is_script "$script_2"; then
    run_script $script_2 "${@:2}"
  elif is_cmd $cmd_1; then
    $cmd_1 "${@:3}"
  elif is_cmd $cmd_2; then
    $cmd_2 "${@:2}"
  else
    echo " not_found: $main_cmd"
  fi
}

is_cmd() {
  if command -v $1 &> /dev/null; then
    return 0
  else
    return 1
  fi
}

is_script() {
  if [[ -f "$(get_cli_path)/src/script/$1" ]]; then
    return 0
  else
    return 1
  fi
}

run_script() {
  bash $(get_cli_path)/src/script/$1 ${@:2}
}

fn_hello() {
  echo " Hello Nex CLI !"
  echo " Usage: nex <1> <2> <3>"
  echo
}

fn__config() {
  get_config_path
}

fn__root() {
  get_root
}

fn__plugin() {
  get_plugin_path $1
}

fn__mod() {
  get_mod_path $1
}

get_home() {
  echo $HOME
}

get_root() {
  echo $(get_home)/dotfiles 
}

get_cli_path() {
  echo $(get_root)/cli.nex
}

get_config_path() {
  echo $(get_cli_path)/dist/config.sh
}

get_plugin_path() {
  echo $(get_root)/plugins/$1.plugin
}

get_mod_path() {
  if [[ $1 == "u" ]] || [[ $1 == "user" ]]; then
    echo $(get_home)/user_mod
  else
    echo $(get_root)/mods/$1.mod
  fi 
}

main "$@"
